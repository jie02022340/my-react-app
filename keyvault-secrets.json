{
  "secrets": {
    "API_URL": {
      "description": "API endpoint URL for the application",
      "value": "https://your-api-endpoint.com",
      "tags": {
        "environment": "all",
        "type": "url"
      }
    },
    "DATABASE_URL": {
      "description": "Database connection string",
      "value": "postgresql://username:password@host:port/database",
      "tags": {
        "environment": "all",
        "type": "connection-string"
      }
    },
    "JWT_SECRET": {
      "description": "JWT signing secret",
      "value": "your-jwt-secret-here",
      "tags": {
        "environment": "all",
        "type": "secret"
      }
    },
    "REDIS_URL": {
      "description": "Redis connection string",
      "value": "redis://host:port",
      "tags": {
        "environment": "all",
        "type": "connection-string"
      }
    },
    "SENDGRID_API_KEY": {
      "description": "SendGrid API key for email notifications",
      "value": "your-sendgrid-api-key",
      "tags": {
        "environment": "production",
        "type": "api-key"
      }
    },
    "STRIPE_SECRET_KEY": {
      "description": "Stripe secret key for payments",
      "value": "sk_test_your-stripe-key",
      "tags": {
        "environment": "production",
        "type": "api-key"
      }
    }
  },
  "accessPolicies": {
    "development": {
      "objectId": "your-dev-service-principal-object-id",
      "permissions": ["get", "list"]
    },
    "staging": {
      "objectId": "your-stage-service-principal-object-id", 
      "permissions": ["get", "list"]
    },
    "production": {
      "objectId": "your-prod-service-principal-object-id",
      "permissions": ["get", "list"]
    }
  }
} 